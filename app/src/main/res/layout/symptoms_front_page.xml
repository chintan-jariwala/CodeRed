<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#030303">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Symptoms"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textColor="#f10b0b"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Choose the date for your symptoms"
        android:id="@+id/textView4"
        android:textColor="#d1d0d0"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:text="Date"
        android:onClick="chooseAnotherButtonClicked"
        android:layout_marginTop="40dp"
        android:textColor="#050505"
        android:textSize="30dp"
        android:background="#bd0303" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Then"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textColor="#b8b7b7"
        android:textSize="25dp"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="SAVE"
        android:id="@+id/btnGoToSymptomsList"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="#c30202"
        android:textSize="25dp"
        android:clickable="true" />

</LinearLayout>