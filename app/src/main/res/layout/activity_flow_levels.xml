<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.samberg.codered.MainActivity"
    android:background="#000000">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 1"
        android:id="@+id/checkBox"
        android:checked="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="55dp"
        android:textColor="#FFFFFF"
        android:buttonTint="#FF0000"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 2"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"
        android:layout_marginTop="31dp"
        android:checked="true"
        android:textColor="#FFFFFF"
        android:buttonTint="#FF0000"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 3"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/checkBox2"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_marginTop="32dp"
        android:checked="true"
        android:textColor="#FFFFFF"
        android:buttonTint="#FF0000"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 4"
        android:id="@+id/checkBox4"
        android:checked="true"
        android:layout_below="@+id/checkBox3"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3"
        android:layout_marginTop="31dp"
        android:textColor="#FFFFFF"
        android:buttonTint="#FF0000"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 5"
        android:id="@+id/checkBox5"
        android:layout_below="@+id/checkBox4"
        android:layout_alignLeft="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4"
        android:layout_marginTop="29dp"
        android:checked="true"
        android:textColor="#FFFFFF"
        android:buttonTint="#FF0000"
        android:clickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 6"
        android:id="@+id/checkBox6"
        android:layout_below="@+id/checkBox5"
        android:layout_alignLeft="@+id/checkBox5"
        android:layout_alignStart="@+id/checkBox5"
        android:layout_marginTop="34dp"
        android:checked="true"
        android:textColor="#FFFFFF"
        android:buttonTint="#FF0000"
        android:clickable="true" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:indeterminate="false"
        android:progressTint="#FFF"
        android:thumbTint="#FFF"
        android:progressBackgroundTint="#FFF"
        android:layout_alignBottom="@+id/checkBox"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:indeterminate="false"
        android:thumbTint="#FFF"
        android:progressTint="#FFF"
        android:progressBackgroundTint="#FFF"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_alignLeft="@+id/seekBar"
        android:layout_alignStart="@+id/seekBar" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar3"
        android:indeterminate="false"
        android:progressTint="#FFF"
        android:thumbTint="#FFF"
        android:progressBackgroundTint="#FFF"
        android:layout_alignBottom="@+id/checkBox3"
        android:layout_alignLeft="@+id/seekBar2"
        android:layout_alignStart="@+id/seekBar2" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar4"
        android:thumbTint="#FFF"
        android:progressTint="#FFF"
        android:progressBackgroundTint="#FFF"
        android:layout_above="@+id/checkBox5"
        android:layout_alignLeft="@+id/seekBar3"
        android:layout_alignStart="@+id/seekBar3" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar5"
        android:progressTint="#FFF"
        android:thumbTint="#FFF"
        android:progressBackgroundTint="#FFF"
        android:layout_above="@+id/checkBox6"
        android:layout_alignLeft="@+id/seekBar4"
        android:layout_alignStart="@+id/seekBar4" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar6"
        android:thumbTint="#FFF"
        android:progressTint="#FFF"
        android:progressBackgroundTint="#FFF"
        android:layout_alignBottom="@+id/checkBox6"
        android:layout_alignLeft="@+id/seekBar5"
        android:layout_alignStart="@+id/seekBar5"
        android:indeterminate="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:clickable="true"
        android:background="#FF0000"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Light - Heavy"
        android:id="@+id/textView"
        android:textColor="#FFF"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

</RelativeLayout>
